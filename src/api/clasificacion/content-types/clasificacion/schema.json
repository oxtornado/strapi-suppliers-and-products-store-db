{
  "kind": "collectionType",
  "collectionName": "clasificacions",
  "info": {
    "singularName": "clasificacion",
    "pluralName": "clasificacions",
    "displayName": "Clasificacion",
    "description": "Junction table for many-to-many relationship between Products and Categories"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "isPrincipal": {
      "type": "boolean",
      "default": false,
      "description": "Indicates if this is the principal category for the product"
    },
    "mostrarEnDestacados": {
      "type": "boolean",
      "default": false,
      "description": "Show this product in featured section of this category"
    },
    "orden": {
      "type": "integer",
      "default": 0,
      "description": "Order of display in category"
    },
    "categoria": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::categoria.categoria",
      "inversedBy": "clasificacions"
    },
    "producto": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::producto.producto",
      "inversedBy": "clasificacions"
    }
  }
}
